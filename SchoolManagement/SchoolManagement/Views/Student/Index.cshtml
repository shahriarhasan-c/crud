@model IEnumerable<SchoolManagement.Models.Student>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Student</h1>
<hr />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>DOB</th>
            <th>Class</th>
            <th>Section</th>
            <th>Class Teacher</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Dob</td>
                <td>@item.Class</td>
                <td>@item.Section</td>
                <td>@item.TeacherId</td>
                <td><a href="@Url.Action("Edit","Student",new {id = item.Id})"class="btn btn-info">Update</a></td>
                <td><a href="@Url.Action("Delete","Student",new {id = item.Id})" class="btn btn-info">Delete</a></td>
            </tr>
        }


    </tbody>
</table>
