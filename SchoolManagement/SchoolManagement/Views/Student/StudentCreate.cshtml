@model SchoolManagement.ViewModels.StudentViewModel
@{
    ViewData["Title"] = "StudentCreate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewBag.Heading</h1>

    @using (Html.BeginForm(Model.Linker, "Student"))
    {
    @Html.HiddenFor(m => m.Id)
        <div class="form-group">
            @Html.LabelFor(m => m.Name,new{@class = "col-md-2 control-label"})
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Name,new{@class = "form-control"})
            </div>
        </div>

        <label>Dob</label>
        <input asp-for="Dob" type="Date" />

       
        <div class="form-group">
            @Html.LabelFor(m => m.Class,new{@class = "col-md-2 control-label"})
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Class,new{@class = "form-control"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Section,new{@class = "col-md-2 control-label"})
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Section,new{@class = "form-control"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.TeacherId,new{@class = "col-md-2 control-label"})
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.TeacherId, new SelectList(Model.teachers,"Id","Name"),"Select Teacher" ,new{@class = "form-control"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-10 col-md-20">
                <input type="submit" class="btn btn-dark" value="Save" />
            </div>
        </div>
    <td><a href="@Url.Action("Index","Student")" class="btn btn-info">View Student List</a></td>
    }

